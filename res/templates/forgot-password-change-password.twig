<h1>{{ t('change_password') }}</h1>

<form class="form-horizontal" action="{{ destination }}" method="POST">
	<fieldset>
		{% if error %}
		<p class="text-danger">{{ error }}</p>
		{% endif %}
		<div class="form-group">
			<label class="control-label col-md-3" for="new_password">{{ t('new_password') }}</label>
			<div class="col-md-6">
				<input type="password" class="form-control" name="new_password" id="new_password" required>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-3" for="new_password_confirm">{{ t('confirm_new_password') }}</label>
			<div class="col-md-6">
				<input type="password" class="form-control" name="new_password_confirm" id="new_password_confirm" required>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-3 col-md-6">
				<button class="btn btn-success">{{ t('update') }}</button>
			</div>
		</div>
	</fieldset>
</form>