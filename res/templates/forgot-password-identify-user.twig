<h1>{{ t('forgot_password') }}</h1>

<form class="form-horizontal col-md-8 col-md-offset-3" action="{{ destination }}" method="POST">
	<fieldset>
		{% if error %}
		<p class="text-danger">{{ error }}</p>
		{% endif %}
		<div class="form-group">
			<label class="control-label col-sm-2" for="login">{{ t('login.' ~ login_label) }}</label>
			<div class="col-sm-6">
				<input type="text" id="login" name="login" class="form-control" value="{{ login }}">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button class="btn btn-success">{{ t('login.submit', [], 'keeko.account') }}</button>
			</div>
		</div>
	</fieldset>
</form>